<UserControl x:Class="Nemandi.WordListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nemandi"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.RowSpan="1">
            <TextBlock x:Name="wordTxt" Margin="10" FontSize="20">adventure</TextBlock>
            <TextBlock x:Name="defTxt" Margin="10" FontSize="20" Foreground="Gray">历险</TextBlock>
        </DockPanel>
        <TextBlock x:Name="srcTxt" TextAlignment="Right" 
                   Margin="0,0,20,0" Foreground="Gray"
                   Grid.Row="1">
            Oxford Dict
        </TextBlock>
    </Grid>
</UserControl>
